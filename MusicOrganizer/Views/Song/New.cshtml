@{
  Layout = "_Layout";
}

<h1>Add a New Song</h1>

<form action='/artists/@Model.Id/songs' method="post">
  <input id="artistId" name="artistId" type="hidden" value="@Model.Id">
  <label for="title">Song Title</label>
  <input id="title" name="title" type="text">
  <label for="album">Album</label>
  <input id="album" name="album"type="text">
  <label for="year">Release Year</label>
  <input id="year" name="year" type="number">
  <button type="submit">Add Song</button>
</form>
<button><a href="/">Back Home</a></button>
<button><a href="/artists">Back to Artists.</a></button>